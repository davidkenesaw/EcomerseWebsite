<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../Partials/BootStrap.ejs') %>
</head>
<body>

    <%- include('../Partials/MainNav.ejs') %>


    <div class="container">
        <div class="row justify-content-md">
            
    <% for (var i=0; i < display.length ; i++) { %>
        <div class="col-md-auto">
        
            
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="<%= display[i].Pic %>" width="286" height="180" >
                    <div class="card-body">
                        <h5 class="card-title"><%= display[i].ProductName %></h5>
                        <p class="card-text"><%= display[i].Description %></p>
                        <p class="card-text"><%= display[i].Cost %></p>
                        
                    </div>
                </div>
            
        </div>
    <% } %>
        
</div>
</div>


<button type="submit" class="btn btn-primary">Checkout</button>





    <%- include('../Partials/Footer.ejs') %>
</body>
</html>